<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="buttonMenu" parent="Theme.AppCompat.Light">
        <item name="buttonBarButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">1px</item>
    </style>
    <style name="buttonMenu1" parent="Theme.AppCompat.Light">
        <item name="buttonBarButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">1px</item>
    </style>
    <style name="buttonDelete" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/colorDelete</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:buttonCornerRadius">5dp</item>
    </style>
    <style name="buttonModify" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/colorModify</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="buttonAdd" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/colorAdd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
